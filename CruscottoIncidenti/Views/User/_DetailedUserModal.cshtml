@model CruscottoIncidenti.Application.User.ViewModels.DetailedUserViewModel

<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content" id="userModalContent">
        <div class="modal-header">
            @if (Model.ShouldBeDeleted)
            {
                <h5 class="modal-title">Delete User</h5>
            }
            else
            {
                <h5 class="modal-title">Detailed User</h5>
            }
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body">
            @if (Model.ShouldBeDeleted)
            {
                <div class="alert alert-danger text-center mb-4" role="alert">
                    Are you sure you want to delete this user?
                </div>
            }

            <div class="mb-3">
                @Html.LabelFor(m => m.Username, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control mw-100", disabled = "disabled" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.FullName, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control mw-100", disabled = "disabled" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Email, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control mw-100", disabled = "disabled" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.LastModified, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.LastModified, new { @class = "form-control mw-100", disabled = "disabled" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Roles, new { @class = "form-label fw-bold" })
                @Html.ListBoxFor(m => m.Roles, (IEnumerable<SelectListItem>)ViewBag.AllRoles,
                    new { @class = "selectpicker form-control mw-100", disabled = "disabled" })
            </div>

            <div class="mb-3 form-switch">
                @Html.CheckBoxFor(m => m.IsEnabled, new { @class = "form-check-input mw-100", disabled = "disabled", role = "switch" })
                @Html.LabelFor(m => m.IsEnabled, new { @class = "fw-bold" })
            </div>
        </div>
        @if (Model.ShouldBeDeleted)
        {
             using (Ajax.BeginForm(new AjaxOptions {Url = $"User/DeleteUser/{Model.Id}",
                 UpdateTargetId = "modal", OnSuccess = "onSuccessModalAction", OnFailure = "onFailureModalAction" }))
             {
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete
                        <span class="spinner-border spinner-border-sm text-light d-none" />
                    </button>
                </div>
             }
         }
    </div>
</div>

