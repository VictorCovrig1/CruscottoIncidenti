@model CruscottoIncidenti.Application.Users.ViewModels.DetailedUserViewModel

<div class="modal-header">
    @*<h5 class="modal-title">@(Model.ShouldBeDeleted ? "Delete User" : "Detailed User")</h5>*@
    <h5 class="modal-title">Detailed User</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<div class="modal-body">
    @*@if (Model.ShouldBeDeleted)
        {
            <div class="alert alert-danger text-center mb-4" role="alert">
                Are you sure you want to delete this user?
            </div>
        }*@

    <div class="mb-3">
        @Html.ValidationMessage("IncorrectDeleteUser", string.Empty, new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Username, Constants.Username, new { @class = "form-label fw-bold" })
        @Html.TextBoxFor(m => m.Username, new { @class = "form-control mw-100", disabled = "disabled" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.FullName, Constants.FullName, new { @class = "form-label fw-bold" })
        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control mw-100", disabled = "disabled" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Email, Constants.Email, new { @class = "form-label fw-bold" })
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control mw-100", disabled = "disabled" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.LastModifiedString, Constants.LastModified, new { @class = "form-label fw-bold" })
        @Html.TextBoxFor(m => m.LastModifiedString, new { @class = "form-control mw-100", disabled = "disabled" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Roles, Constants.Roles, new { @class = "form-label fw-bold" })
        @Html.TextBoxFor(m => m.RolesString, new { @class = "selectpicker form-control mw-100", disabled = "disabled" })
    </div>

    <div class="mb-3 form-switch">
        @Html.CheckBoxFor(m => m.IsEnabled, new { @class = "form-check-input mw-100", disabled = "disabled", role = "switch" })
        @Html.LabelFor(m => m.IsEnabled, Constants.Enabled, new { @class = "fw-bold" })
    </div>
</div>

