@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="modal" tabindex="-1" id="modal">
</div>

<div class="my-5">
    <table id="usersTable" class="w-100 table table-striped table-bordered table-hover"></table>
    <div class="mt-3">
        <button onclick="createAction();" class="btn btn-success" id="createButton"><i class="fas fa-plus"></i> Add</button>
        <button onclick="editAction();" class="btn btn-primary" id="editButton"><i class="fas fa-pen"></i> Edit</button>
        <button onclick="detailedAction();" class="btn btn-secondary" id="detailsButton"><i class="fas fa-info"></i> Details</button>
        <button onclick="detailedAction(true);" class="btn btn-danger" id="deleteButton"><i class="fas fa-trash"></i> Delete</button>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/dataTables/users")

    <script>
        $(renderUsersGrid());
    </script>
}

