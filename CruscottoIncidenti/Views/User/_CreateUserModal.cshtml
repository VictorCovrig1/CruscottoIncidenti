@model CruscottoIncidenti.Application.Users.ViewModels.CreateUserViewModel

<div class="modal-header">
    <h5 class="modal-title">Create User</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

@using (Ajax.BeginForm("CreateUser", "User", new AjaxOptions { UpdateTargetId = "userModalContent", 
    OnSuccess = "onSuccessModalAction", OnFailure = "onFailureModalAction" }))
{
    <div class="modal-body">
        @Html.AntiForgeryToken()
        <div class="mb-2">
            @Html.ValidationMessage("IncorrectPostUser", string.Empty, new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Username, Constants.Username, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control mw-100", placeholder = Constants.Username })
            @Html.ValidationMessageFor(m => m.Username, string.Empty, new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.FullName, Constants.FullName, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control mw-100", placeholder = Constants.Username })
            @Html.ValidationMessageFor(m => m.FullName, string.Empty, new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Email, Constants.Email, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control mw-100", placeholder = Constants.Email })
            @Html.ValidationMessageFor(m => m.Email, string.Empty, new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Password, Constants.Password, new { @class = "form-label fw-bold" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control mw-100", placeholder = Constants.Password })
            @Html.ValidationMessageFor(m => m.Password, string.Empty, new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.ConfirmPassword, Constants.ConfirmPassword, new { @class = "form-label fw-bold" })
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control mw-100", placeholder = Constants.ConfirmPassword })
            @Html.ValidationMessageFor(m => m.ConfirmPassword, string.Empty, new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Roles, Constants.Roles, new { @class = "form-label fw-bold" })
            @Html.ListBoxFor(m => m.Roles, (IEnumerable<SelectListItem>)ViewBag.AllRoles, new { @class = "selectpicker form-control mw-100" })
            @Html.ValidationMessageFor(m => m.Roles, string.Empty, new { @class = "text-danger" })
        </div>
    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-success">
            <i class="fas fa-plus"></i> Add
            <span class="spinner-border spinner-border-sm text-light d-none" />
        </button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    </div>
}


