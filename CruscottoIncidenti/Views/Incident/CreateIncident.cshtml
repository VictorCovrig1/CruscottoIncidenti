@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model CruscottoIncidenti.Application.Incidents.ViewModels.CreateIncidentViewModel

<div class="pt-5">
    <div class="d-flex justify-content-center">
        <div class="alert alert-success text-center mb-4 col-8" role="alert">
            <h5>Create User</h5>
        </div>
    </div>


    @using (Html.BeginForm("CreateIncident", "Incident", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="mb-3">
            @Html.ValidationMessage("IncorrectPostIncident", string.Empty, new { @class = "text-danger" })
        </div>

        <div class="row">
            <div class="col-6">
                @Html.LabelFor(m => m.Subsystem, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.Subsystem, new { @class = "form-control  mw-100", placeholder = @Html.DisplayNameFor(m => m.Subsystem) })
            </div>
            <div class="col-6">
                @Html.LabelFor(m => m.ScenarioId, new { @class = "form-label fw-bold" })
                @Html.DropDownListFor(m => m.ScenarioId, (IEnumerable<SelectListItem>)ViewBag.Scenarios, Constants.PickerDefaultText, new { @class = "selectpicker form-control mw-100" })
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-6">
                @Html.LabelFor(m => m.Type, new { @class = "form-label fw-bold" })
                @Html.DropDownListFor(m => m.Type, (IEnumerable<SelectListItem>)ViewBag.Types, new { @class = "selectpicker form-control mw-100" })
            </div>
            <div class="col-6">
                @Html.LabelFor(m => m.OriginId, new { @class = "form-label fw-bold" })
                @Html.DropDownListFor(m => m.OriginId, (IEnumerable<SelectListItem>)ViewBag.Origins, Constants.PickerDefaultText,
                    new { @class = "selectpicker form-control mw-100", @onchange = $"getAmbitsByOrigin();", @id = "origins" })
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-6">
                @Html.LabelFor(m => m.Urgency, new { @class = "form-label fw-bold" })
                @Html.DropDownListFor(m => m.Urgency, (IEnumerable<SelectListItem>)ViewBag.Urgencies, Constants.PickerDefaultText, new { @class = "selectpicker form-control mw-100" })
            </div>
            <div class="col-6">
                @Html.LabelFor(m => m.AmbitId, new { @class = "form-label fw-bold" })
                @Html.DropDownListFor(m => m.AmbitId, new List<SelectListItem>(), $"{Constants.PickerDefaultText} ({Constants.SelectOrigin})",
                    new { @class = "selectpicker form-control mw-100", @onchange = "getIncidentTypeByAmbit();", @id = "ambits", @disabled = "disabled" })
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-6">
                @Html.LabelFor(m => m.SubCause, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.SubCause, new { @class = "form-control mw-100", placeholder = @Html.DisplayNameFor(m => m.SubCause) })
            </div>
            <div class="col-6">
                @Html.LabelFor(m => m.IncidentTypeId, new { @class = "form-label fw-bold" })
                @Html.DropDownListFor(m => m.IncidentTypeId, new List<SelectListItem>(), $"{Constants.PickerDefaultText} ({Constants.SelectAmbit})",
                    new { @class = "selectpicker form-control mw-100", @id = "types", @disabled = "disabled" })
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-6">
                @Html.LabelFor(m => m.ProblemSumary, new { @class = "form-label fw-bold" })
                @Html.TextAreaFor(m => m.ProblemSumary, new { @class = "form-control mw-100", placeholder = @Html.DisplayNameFor(m => m.ProblemSumary) })
                @Html.ValidationMessageFor(m => m.ProblemSumary, string.Empty, new { @class = "text-danger" })
            </div>
            <div class="col-6">
                @Html.LabelFor(m => m.ThirdParty, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.ThirdParty, new { @class = "form-control mw-100", placeholder = @Html.DisplayNameFor(m => m.ThirdParty) })
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-6">
                @Html.LabelFor(m => m.ProblemDescription, new { @class = "form-label fw-bold" })
                @Html.TextAreaFor(m => m.ProblemDescription, new { @class = "form-control mw-100", placeholder = @Html.DisplayNameFor(m => m.ProblemDescription) })
                @Html.ValidationMessageFor(m => m.ProblemDescription, string.Empty, new { @class = "text-danger" })
            </div>
            <div class="col-6">
                @Html.LabelFor(m => m.ApplicationType, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.ApplicationType, new { @class = "form-control mw-100", placeholder = @Html.DisplayNameFor(m => m.ApplicationType) })
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-6">
                @Html.LabelFor(m => m.ThreatId, new { @class = "form-label fw-bold" })
                @Html.DropDownListFor(m => m.ThreatId, (IEnumerable<SelectListItem>)ViewBag.Threats, Constants.PickerDefaultText, new { @class = "selectpicker form-control mw-100" })
            </div>
        </div>

        <div class="d-flex justify-content-center gap-2 my-5">
            <a href="@Url.Action("Index","Incident")" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back</a>
            <button type="submit" class="btn btn-success"><i class="fas fa-plus"></i> Add</button>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/incidentCommon")
}
