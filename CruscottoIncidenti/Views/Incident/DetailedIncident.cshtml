
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model CruscottoIncidenti.Application.Incidents.ViewModels.DetailedIncidentViewModel

<div class="pt-5">
    <div class="d-flex justify-content-center">
        <div class="alert alert-secondary text-center mb-4 col-8" role="alert">
            <h5>Edit User</h5>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            @Html.LabelFor(m => m.RequestNr, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.RequestNr, new { @class = "form-control mw-100", disabled = "disabled" })
        </div>
        <div class="col-6">
            @Html.LabelFor(m => m.Solution, new { @class = "form-label fw-bold" })
            @Html.TextAreaFor(m => m.Solution, new { @class = "form-control mw-100", disabled = "disabled" })
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-6">
            @Html.LabelFor(m => m.Subsystem, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.Subsystem, new { @class = "form-control  mw-100", disabled = "disabled" })
        </div>
        <div class="col-6">
            @Html.LabelFor(m => m.ThreatId, new { @class = "form-label fw-bold" })
            @Html.DropDownListFor(m => m.ThreatId, (IEnumerable<SelectListItem>)ViewBag.Threats, new { @class = "form-control mw-100", disabled = "disabled" })
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-6">
            @Html.LabelFor(m => m.OpenDate, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.OpenDate, new { @class = "form-control mw-100", data_provide = "datepicker", @data_date_format = "dd/mm/yyyy", disabled = "disabled" })
        </div>
        <div class="col-6">
            @Html.LabelFor(m => m.ScenarioId, new { @class = "form-label fw-bold" })
            @Html.DropDownListFor(m => m.ScenarioId, (IEnumerable<SelectListItem>)ViewBag.Scenarios, new { @class = "form-control mw-100", disabled = "disabled" })
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-6">
            @Html.LabelFor(m => m.CloseDate, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.CloseDate, new { @class = "form-control mw-100", data_provide = "datepicker", @data_date_format = "dd/mm/yyyy", disabled = "disabled" })
        </div>
        <div class="col-6">
            @Html.LabelFor(m => m.OriginId, new { @class = "form-label fw-bold" })
            @Html.DropDownListFor(m => m.OriginId, (IEnumerable<SelectListItem>)ViewBag.Origins, new { @class = "form-control mw-100", @onchange = $"getAmbitsByOrigin();", @id = "origins", disabled = "disabled" })
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-6">
            @Html.LabelFor(m => m.Type, new { @class = "form-label fw-bold" })
            @Html.DropDownListFor(m => m.Type, (IEnumerable<SelectListItem>)ViewBag.Types, new { @class = "form-control mw-100", disabled = "disabled" })
        </div>
        <div class="col-6">
            @Html.LabelFor(m => m.AmbitId, new { @class = "form-label fw-bold" })
            @Html.DropDownListFor(m => m.AmbitId, (IEnumerable<SelectListItem>)ViewBag.Ambits, new { @class = "form-control mw-100", @onchange = "getIncidentTypeByAmbit();", @id = "ambits", disabled = "disabled" })
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-6">
            @Html.LabelFor(m => m.Urgency, new { @class = "form-label fw-bold" })
            @Html.DropDownListFor(m => m.Urgency, (IEnumerable<SelectListItem>)ViewBag.Urgencies, new { @class = "form-control mw-100", disabled = "disabled" })
        </div>
        <div class="col-6">
            @Html.LabelFor(m => m.IncidentTypeId, new { @class = "form-label fw-bold" })
            @Html.DropDownListFor(m => m.IncidentTypeId, (IEnumerable<SelectListItem>)ViewBag.IncidentTypes, new { @class = "form-control mw-100", @id = "types", disabled = "disabled" })
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-6">
            @Html.LabelFor(m => m.SubCause, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.SubCause, new { @class = "form-control mw-100", disabled = "disabled" })
        </div>
        <div class="col-6">
            @Html.LabelFor(m => m.ThirdParty, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.ThirdParty, new { @class = "form-control mw-100", disabled = "disabled" })
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-6">
            @Html.LabelFor(m => m.ProblemSumary, new { @class = "form-label fw-bold" })
            @Html.TextAreaFor(m => m.ProblemSumary, new { @class = "form-control mw-100", disabled = "disabled" })
            @Html.ValidationMessageFor(m => m.ProblemSumary, string.Empty, new { @class = "text-danger" })
        </div>
        <div class="col-6">
            @Html.LabelFor(m => m.ApplicationType, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.ApplicationType, new { @class = "form-control mw-100", disabled = "disabled" })
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-6">
            @Html.LabelFor(m => m.ProblemDescription, new { @class = "form-label fw-bold" })
            @Html.TextAreaFor(m => m.ProblemDescription, new { @class = "form-control mw-100", disabled = "disabled" })
            @Html.ValidationMessageFor(m => m.ProblemDescription, string.Empty, new { @class = "text-danger" })
        </div>
    </div>

    <div class="d-flex justify-content-center gap-2 my-5">
        <a href="@Url.Action("Index","Incident")" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back</a>
    </div>
</div>