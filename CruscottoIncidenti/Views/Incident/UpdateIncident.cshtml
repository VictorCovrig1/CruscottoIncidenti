@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model CruscottoIncidenti.Application.Incidents.ViewModels.UpdateIncidentViewModel

<div class="pt-5">
    <div class="d-flex justify-content-center">
        <div class="alert alert-primary text-center mb-4 col-8" role="alert">
            <h5>Edit User</h5>
        </div>
    </div>

    @using (Html.BeginForm("UpdateIncident", "Incident", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(m => m.Id, new { @class = "d-none" })

        <div class="mb-3">
            @Html.ValidationMessage("IncorrectPostIncident", string.Empty, new { @class = "text-danger" })
        </div>

        <div class="row">
            <div class="col-6">
                @Html.LabelFor(m => m.RequestNr, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.RequestNr, new { @class = "form-control mw-100", disabled = "disabled" })
            </div>
            <div class="col-6">
                @Html.LabelFor(m => m.Solution, new { @class = "form-label fw-bold" })
                @Html.TextAreaFor(m => m.Solution, new { @class = "form-control mw-100", placeholder = @Html.DisplayNameFor(m => m.Solution) })
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-6">
                @Html.LabelFor(m => m.Subsystem, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.Subsystem, new { @class = "form-control  mw-100", placeholder = @Html.DisplayNameFor(m => m.Subsystem) })
            </div>
            <div class="col-6">
                @Html.LabelFor(m => m.ThreatId, new { @class = "form-label fw-bold" })
                @Html.DropDownListFor(m => m.ThreatId, (IEnumerable<SelectListItem>)ViewBag.Threats, Constants.PickerDefaultText, new { @class = "form-control mw-100" })
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-6">
                @Html.LabelFor(m => m.OpenDate, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.OpenDate, new { @class = "form-control mw-100", data_provide = "datepicker", @data_date_format = "dd/mm/yyyy" })
            </div>
            <div class="col-6">
                @Html.LabelFor(m => m.ScenarioId, new { @class = "form-label fw-bold" })
                @Html.DropDownListFor(m => m.ScenarioId, (IEnumerable<SelectListItem>)ViewBag.Scenarios, Constants.PickerDefaultText, new { @class = "form-control mw-100" })
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-6">
                @Html.LabelFor(m => m.CloseDate, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.CloseDate, new { @class = "form-control mw-100", data_provide = "datepicker", @data_date_format = "dd/mm/yyyy", data_date_today_highlight = true })
            </div>
            <div class="col-6">
                @Html.LabelFor(m => m.OriginId, new { @class = "form-label fw-bold" })
                @Html.DropDownListFor(m => m.OriginId, (IEnumerable<SelectListItem>)ViewBag.Origins, Constants.PickerDefaultText,
                    new { @class = "form-control mw-100", @onchange = $"getAmbitsByOrigin();", @id = "origins" })
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-6">
                @Html.LabelFor(m => m.Type, new { @class = "form-label fw-bold" })
                @Html.DropDownListFor(m => m.Type, (IEnumerable<SelectListItem>)ViewBag.Types, new { @class = "form-control mw-100" })
            </div>
            <div class="col-6">
                @Html.LabelFor(m => m.AmbitId, new { @class = "form-label fw-bold" })
                @Html.DropDownListFor(m => m.AmbitId, (IEnumerable<SelectListItem>)ViewBag.Ambits, $"{Constants.PickerDefaultText} ({Constants.SelectOrigin})",
                    new { @class = "form-control mw-100", @onchange = "getIncidentTypeByAmbit();", @id = "ambits" })
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-6">
                @Html.LabelFor(m => m.Urgency, new { @class = "form-label fw-bold" })
                @Html.DropDownListFor(m => m.Urgency, (IEnumerable<SelectListItem>)ViewBag.Urgencies, Constants.PickerDefaultText, new { @class = "form-control mw-100" })
            </div>
            <div class="col-6">
                @Html.LabelFor(m => m.IncidentTypeId, new { @class = "form-label fw-bold" })
                @Html.DropDownListFor(m => m.IncidentTypeId, (IEnumerable<SelectListItem>)ViewBag.IncidentTypes,
                    $"{Constants.PickerDefaultText} ({Constants.SelectAmbit})", new { @class = "form-control mw-100", @id = "types" })
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-6">
                @Html.LabelFor(m => m.SubCause, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.SubCause, new { @class = "form-control mw-100", placeholder = @Html.DisplayNameFor(m => m.SubCause) })
            </div>
            <div class="col-6">
                @Html.LabelFor(m => m.ThirdParty, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.ThirdParty, new { @class = "form-control mw-100", placeholder = @Html.DisplayNameFor(m => m.ThirdParty) })
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-6">
                @Html.LabelFor(m => m.ProblemSumary, new { @class = "form-label fw-bold" })
                @Html.TextAreaFor(m => m.ProblemSumary, new { @class = "form-control mw-100", placeholder = @Html.DisplayNameFor(m => m.ProblemSumary) })
                @Html.ValidationMessageFor(m => m.ProblemSumary, string.Empty, new { @class = "text-danger" })
            </div>
            <div class="col-6">
                @Html.LabelFor(m => m.ApplicationType, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.ApplicationType, new { @class = "form-control mw-100", placeholder = @Html.DisplayNameFor(m => m.ApplicationType) })
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-6">
                @Html.LabelFor(m => m.ProblemDescription, new { @class = "form-label fw-bold" })
                @Html.TextAreaFor(m => m.ProblemDescription, new { @class = "form-control mw-100", placeholder = @Html.DisplayNameFor(m => m.ProblemDescription) })
                @Html.ValidationMessageFor(m => m.ProblemDescription, string.Empty, new { @class = "text-danger" })
            </div>
        </div>

        <div class="d-flex justify-content-center gap-2 my-5">
            <a href="@Url.Action("Index","Incident")" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back</a>
            <button type="submit" class="btn btn-primary"><i class="fas fa-pen"></i> Edit</button>
        </div>
    }
</div>

@section Styles {
    @Styles.Render("~/Content/bootstrap-picker")
}

@section Scripts {
    @Scripts.Render("~/bundles/incidentCommon")
    @Scripts.Render("~/bundles/bootstrap-picker")

    <script>
        $(document).ready(function () {
            if (!$("#origins").val()) {
                $("#ambits").prop("disabled", true);
                $("#ambits").selectpicker("refresh");
            }
            if (!$("#ambits").val()) {
                $("#types").prop("disabled", true);
                $("#types").selectpicker("refresh");
            }
        });
    </script>
}

