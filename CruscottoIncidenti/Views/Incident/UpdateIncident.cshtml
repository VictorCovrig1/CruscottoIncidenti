@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model CruscottoIncidenti.Application.Incidents.ViewModels.UpdateIncidentViewModel

<div class="pt-5">
    <div class="d-flex justify-content-center">
        <div class="alert alert-primary  text-center mb-4 col-8" role="alert">
            <h5>Edit Incident</h5>
        </div>
    </div>

    @using (Html.BeginForm("UpdateIncident", "Incident", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(m => m.Id, new { @class = "d-none" })
        @Html.HiddenFor(m => m.OpenDate, new { @class = "d-none" })
        @Html.HiddenFor(m => m.CloseDate, new { @class = "d-none" })
        @Html.HiddenFor(m => m.Type, new { @class = "d-none" })
        @Html.HiddenFor(m => m.Urgency, new { @class = "d-none" })

        <div class="mb-3">
            @Html.ValidationMessage("IncorrectUpdateIncident", string.Empty, new { @class = "text-danger" })
        </div>

        <div class="row">
            <div class="col-6">
                @Html.LabelFor(m => m.RequestNr, Constants.RequestNr, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.RequestNr, new { @class = "form-control mw-100", disabled = "disabled" })
            </div>
            <div class="col-6">
                @Html.LabelFor(m => m.SubCause, Constants.SubCause, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.SubCause, new { @class = "form-control mw-100", placeholder = Constants.SubCause })
                @Html.ValidationMessageFor(m => m.SubCause, string.Empty, new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-6">
                @Html.LabelFor(m => m.Subsystem, Constants.Subsystem, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.Subsystem, new { @class = "form-control  mw-100", placeholder = Constants.Subsystem })
                @Html.ValidationMessageFor(m => m.Subsystem, string.Empty, new { @class = "text-danger" })
            </div>
            <div class="col-6">
                @Html.LabelFor(m => m.ThreatId, Constants.Threat, new { @class = "form-label fw-bold" })
                @Html.DropDownListFor(m => m.ThreatId, (IEnumerable<SelectListItem>)ViewBag.Threats, new { @class = "form-control mw-100" })
                @Html.ValidationMessageFor(m => m.ThreatId, string.Empty, new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-6">
                @Html.LabelFor(m => m.OpenDate, Constants.OpenDate, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.OpenDateString, new { @class = "form-control mw-100", data_provide = "datepicker", 
                    @data_date_format = "dd/mm/yyyy", data_date_today_highlight = true, placeholder = "dd/mm/yyyy" })
            </div>
            <div class="col-6">
                @Html.LabelFor(m => m.ScenarioId, Constants.Scenario, new { @class = "form-label fw-bold" })
                @Html.DropDownListFor(m => m.ScenarioId, (IEnumerable<SelectListItem>)ViewBag.Scenarios, new { @class = "form-control mw-100" })
                @Html.ValidationMessageFor(m => m.ScenarioId, string.Empty, new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-6">
                @Html.LabelFor(m => m.CloseDate, Constants.CloseDate, new { @class = "form-label fw-bold" })
                @Html.TextBoxFor(m => m.CloseDateString, new { @class = "form-control mw-100", data_provide = "datepicker", 
                    @data_date_format = "dd/mm/yyyy", data_date_today_highlight = true, placeholder = "dd/mm/yyyy" })
            </div>
            <div class="col-6">
                @Html.LabelFor(m => m.OriginId, Constants.Origin, new { @class = "form-label fw-bold" })
                @Html.DropDownListFor(m => m.OriginId, (IEnumerable<SelectListItem>)ViewBag.Origins,
                    new { @class = "form-control mw-100", @onchange = $"getAmbitsByOrigin();", @id = "origins" })
                @Html.ValidationMessageFor(m => m.OriginId, string.Empty, new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-6">
                @Html.LabelFor(m => m.Type, Constants.Type, new { @class = "form-label fw-bold" })
                @Html.DropDownListFor(m => m.TypeInt, (IEnumerable<SelectListItem>)ViewBag.Types, new { @class = "form-control mw-100" })
                @Html.ValidationMessageFor(m => m.TypeInt, string.Empty, new { @class = "text-danger" })
            </div>
            <div class="col-6">
                @Html.LabelFor(m => m.AmbitId, Constants.Ambit, new { @class = "form-label fw-bold" })
                @Html.DropDownListFor(m => m.AmbitId, (IEnumerable<SelectListItem>)ViewBag.Ambits,
                    new { @class = "form-control mw-100", @onchange = "getIncidentTypeByAmbit();", @id = "ambits" })
                @Html.ValidationMessageFor(m => m.AmbitId, string.Empty, new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-6">
                @Html.LabelFor(m => m.Urgency, Constants.Urgency, new { @class = "form-label fw-bold" })
                @Html.DropDownListFor(m => m.UrgencyInt, (IEnumerable<SelectListItem>)ViewBag.Urgencies, new { @class = "form-control mw-100" })
                @Html.ValidationMessageFor(m => m.UrgencyInt, string.Empty, new { @class = "text-danger" })
            </div>
            <div class="col-6">
                @Html.LabelFor(m => m.IncidentTypeId, Constants.IncidentType, new { @class = "form-label fw-bold" })
                @Html.DropDownListFor(m => m.IncidentTypeId, (IEnumerable<SelectListItem>)ViewBag.IncidentTypes, new { @class = "form-control mw-100", @id = "types" })
                @Html.ValidationMessageFor(m => m.IncidentTypeId, string.Empty, new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-6">
                @Html.LabelFor(m => m.ProblemSummary, Constants.ProblemSummary, new { @class = "form-label fw-bold" })
                @Html.TextAreaFor(m => m.ProblemSummary, new { @class = "form-control no-resize mw-100", placeholder = Constants.ProblemSummary, rows = 5 })
                @Html.ValidationMessageFor(m => m.ProblemSummary, string.Empty, new { @class = "text-danger" })
            </div>
            <div class="col-6">
                <div class="mb-4">
                    @Html.LabelFor(m => m.ApplicationType, Constants.ApplicationType, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.ApplicationType, new { @class = "form-control mw-100", placeholder = Constants.ApplicationType })
                    @Html.ValidationMessageFor(m => m.ApplicationType, string.Empty, new { @class = "text-danger" })
                </div>
                <div>
                    @Html.LabelFor(m => m.ThirdParty, Constants.ThirdParty, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.ThirdParty, new { @class = "form-control mw-100", placeholder = Constants.ThirdParty })
                    @Html.ValidationMessageFor(m => m.ThirdParty, string.Empty, new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-6">
                @Html.LabelFor(m => m.ProblemDescription, Constants.ProblemDescription, new { @class = "form-label fw-bold" })
                @Html.TextAreaFor(m => m.ProblemDescription, new { @class = "form-control no-resize mw-100", rows = 5, placeholder = Constants.ProblemDescription })
            </div>
            <div class="col-6">
                @Html.LabelFor(m => m.Solution, Constants.Solution, new { @class = "form-label fw-bold" })
                @Html.TextAreaFor(m => m.Solution, new { @class = "form-control no-resize mw-100", rows = 5, placeholder = Constants.Solution })
            </div>
        </div>

        <div class="d-flex justify-content-center gap-2 my-5">
            <a href="@Url.Action("Index","Incident")" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back</a>
            <button type="submit" class="btn btn-primary"><i class="fas fa-pen"></i> Edit</button>
        </div>
    }
</div>

@section Styles {
    @Styles.Render("~/Content/bootstrap-picker")
}

@section Scripts {
    @Scripts.Render("~/bundles/incidentCommon")
    @Scripts.Render("~/bundles/bootstrap-picker")

    <script>
        $(document).ready(function () {
            if (!$("#origins").val()) {
                $("#ambits").prop("disabled", true);
                $("#ambits").selectpicker("refresh");
            }
            if (!$("#ambits").val()) {
                $("#types").prop("disabled", true);
                $("#types").selectpicker("refresh");
            }
        });
    </script>
}

