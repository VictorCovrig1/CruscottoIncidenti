@model CruscottoIncidenti.Application.User.Commands.CreateUser.CreateUserCommand

<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content" id="userModalContent">
        <div class="modal-header">
            <h5 class="modal-title">Create User</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
       @using (Ajax.BeginForm("CreateUser", "User", new AjaxOptions { UpdateTargetId = "modal", OnSuccess = "onSuccessModalAction" }))
        {
            <div class="modal-body">
                @Html.AntiForgeryToken()
                <div class="mb-2">
                    @Html.ValidationMessage("IncorrectPostUser", string.Empty, new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Username, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control mw-100", placeholder = @Html.DisplayNameFor(m => m.Username) })
                    @Html.ValidationMessageFor(m => m.Username, string.Empty, new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.FullName, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.FullName, new { @class = "form-control mw-100", placeholder = @Html.DisplayNameFor(m => m.FullName) })
                    @Html.ValidationMessageFor(m => m.FullName, string.Empty, new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Email, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control mw-100", placeholder = @Html.DisplayNameFor(m => m.Email) })
                    @Html.ValidationMessageFor(m => m.Email, string.Empty, new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Password, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control mw-100", placeholder = @Html.DisplayNameFor(m => m.Password) })
                    @foreach (var error in ViewData.ModelState["Password"]?.Errors ?? Enumerable.Empty<ModelError>())
                    {
                        <span class="text-danger">@error.ErrorMessage</span><br />
                    }
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Roles, new { @class = "form-label fw-bold" })
                    @Html.ListBoxFor(m => m.Roles, (IEnumerable<SelectListItem>)ViewBag.AllRoles, new { @class = "selectpicker form-control mw-100" })
                    @Html.ValidationMessageFor(m => m.Roles, string.Empty, new { @class = "text-danger" })
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-plus"></i> Add
                    <span class="spinner-border spinner-border-sm text-light d-none" />
                </button>
            </div>
         }
    </div>
</div>


