@model CruscottoIncidenti.Application.User.Commands.CreateUser.CreateUserCommand

<div class="modal-header">
    <h5 class="modal-title">Create User</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
@using (Ajax.BeginForm("CreateUser", "User", new AjaxOptions { UpdateTargetId = "userModalContent", OnSuccess = "onSuccessModalAction" }))
{
    <div class="modal-body">
        @Html.AntiForgeryToken()
        <div class="mb-2">
            @Html.ValidationMessage("IncorrectPostUser", string.Empty, new { @class = "text-danger" })
        </div>
        
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control mw-100", placeholder = @Html.DisplayNameFor(m => m.Username) })
            @Html.ValidationMessageFor(m => m.Username, string.Empty, new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            <label for="fullname" class="form-label">Full Name</label>
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control mw-100", placeholder = @Html.DisplayNameFor(m => m.FullName) })
            @Html.ValidationMessageFor(m => m.FullName, string.Empty, new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control mw-100", placeholder = @Html.DisplayNameFor(m => m.Email) })
            @Html.ValidationMessageFor(m => m.Email, string.Empty, new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            @Html.TextBoxFor(m => m.Password, new { @class = "form-control mw-100", placeholder = @Html.DisplayNameFor(m => m.Password) })
            @foreach (var error in ViewData.ModelState["Password"]?.Errors ?? Enumerable.Empty<ModelError>())
            {
                <span class="text-danger">@error.ErrorMessage</span><br />
            }
        </div>

        <div class="mb-3">
            <label for="roles" class="form-label">Roles</label>
            @Html.DropDownListFor(m => m.Roles, (IEnumerable<SelectListItem>)ViewBag.Roles,
                new { @class = "selectpicker form-control mw-100", @multiple=true })
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-success">
            Create
            <span class="spinner-border spinner-border-sm text-light d-none" />
        </button>
    </div>
}
