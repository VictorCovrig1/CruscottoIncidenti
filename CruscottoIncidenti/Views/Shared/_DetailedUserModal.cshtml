@model CruscottoIncidenti.Application.User.ViewModels.DetailedUserViewModel

<div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content" id="userModalContent">
        <div class="modal-header">
            @if (Model.ShouldBeDeleted)
            {
                <h5 class="modal-title">Delete User</h5>
            }
            else
            {
                <h5 class="modal-title">Detailed User</h5>
            }
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body @(Model.ShouldBeDeleted ? "p-4" : "p-5")">
            @if (Model.ShouldBeDeleted)
            {
                <div class="alert alert-danger text-center mb-4" role="alert">
                    Are you sure you want to delete this user?
                </div>
            }

            <div class="row mb-3">
                <div class="col-6">
                    @Html.LabelFor(m => m.Id, new { @class = "fw-bold" }): @Model.Id
                </div>
                <div class="col-6">
                    @Html.LabelFor(m => m.Username, new { @class = "fw-bold" }): @Model.Username
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-6">
                    @Html.LabelFor(m => m.Created, new { @class = "fw-bold" }): @(Model.Created?.ToString() ?? "-")
                </div>
                <div class="col-6">
                    @Html.LabelFor(m => m.FullName, new { @class = "fw-bold" }) : @Model.FullName
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-6">
                    @Html.LabelFor(m => m.CreatedBy, new { @class = "fw-bold" }): @(Model.CreatedBy?.ToString() ?? "-")
                </div>
                <div class="col-6">
                    @Html.LabelFor(m => m.Email, new { @class = "fw-bold" }): @Model.Email
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-6">
                    @Html.LabelFor(m => m.LastModified, new { @class = "fw-bold" }): @(Model.LastModified?.ToString() ?? "-")
                </div>
                <div class="col-6">
                    @Html.LabelFor(m => m.IsEnabled, new { @class = "fw-bold" }): @Html.CheckBoxFor(m => m.IsEnabled,
                        new { @class = "form-check-input mw-100", placeholder = @Html.DisplayNameFor(m => m.IsEnabled), disabled = "disabled" })
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-6">
                    @Html.LabelFor(m => m.LastModifiedBy, new { @class = "fw-bold" }): @(Model.LastModifiedBy?.ToString() ?? "-")
                </div>
                <div class="col-6">
                    @Html.LabelFor(m => m.Roles, new { @class = "fw-bold" }):
                    <ul>
                        @foreach (var role in Model.Roles)
                        {
                            <li>@role</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        @if (Model.ShouldBeDeleted)
        {
            using (Ajax.BeginForm(new AjaxOptions {
                Url = $"User/DeleteUser/{Model.Id}", UpdateTargetId = "modal", OnSuccess = "onSuccessModalAction", OnFailure = "onFailureModalAction" }))
            {
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete
                        <span class="spinner-border spinner-border-sm text-light d-none" />
                    </button>
                </div>
             }
         }
    </div>
</div>

